{% extends 'base.html.twig' %}

{% block title %}Blog: Artilce|Commentaires
{% endblock %}

{% block body %}
    {% include "layouts/_navbar.html.twig" %}
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex flex-col px-5 py-16 justify-center items-center">
            <h1 class="mb-3 title-font sm:text-4xl text-3xl font-medium text-gray-900">{{event.title}}</h1>
            <h3 class="text-xl text-gray-400">Débute le {{event.startsAt|date('d m Y H:i')}} à {{event.location}}</h3>
            <img class="lg:w-2/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded" alt="hero" src="/images/events/{{event.imageName}}">
            <div class="lg:w-2/6 md:w-3/6 w-5/6  flex flex-col  items-center">
                <p class="leading-relaxed">{{event.content}}</p>
            </div>
        </div>
        {% include "components/_share.html.twig" %}
    </section>
    {% include "layouts/_footer.html.twig"%}
{% endblock %}